{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "nixos VM",
            "type": "shell",
            "command": "rm result -rf; nixos-rebuild build-vm --flake ~/.config/nixos#green; if [[ -d ./result ]] ; then ./result/bin/run-green-vm ; fi;",
            "options": {
                "cwd": "/tmp",
                "shell": {
                    "executable": "bash",
                    "args": [
                        "-c"
                    ]
                }
            },
            "problemMatcher": []
        },
        {
            "label": "nixos test",
            "type": "shell",
            "command": "nh os test",
            "problemMatcher": []
        },
        {
            "label": "nixos switch",
            "type": "shell",
            "command": "nh os switch",
            "problemMatcher": []
        }
    ]
}