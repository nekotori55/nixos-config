    "group/tray": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": true,
            "children-class": "tray-element"
        },
        "modules": [
            "custom/tray-icon",
            "tray"
        ]
    },
    "cpu": {
        "format": "{usage}% Ôíº",
        "tooltip": true
    },
    "memory": {
        "format": "{percentage}% ÓøÖ",
        "tooltip": true
    },
    "temperature": {
