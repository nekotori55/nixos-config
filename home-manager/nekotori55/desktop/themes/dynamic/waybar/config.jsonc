        },
        "ignored-players": [
            "firefox",
            "librewolf"
        ]
    },
    "group/audio": {
        "orientation": "inherit",
        "modules": [
            "pulseaudio#input",
            "pulseaudio#output"
        ]
    },
    "group/perf": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false,
            "children-class": "perf-element",
            "click-to-reveal": "true"
        },
        "modules": [
            "custom/perf-icon",
            "temperature",
            "cpu",
            "memory"
        ]
    },
    "custom/perf-icon": {
        "tooltip": false,
        "format": "Ó¥Ø"
    },
    "group/misc": {
        "orientation": "inherit",
        "modules": [
            "hyprland/language"
        ]
    },
    "group/connection": {
        "orientation": "inherit",
        "modules": [
            "bluetooth",
            "network"
        ]
    },
    "custom/control-center": {
        "tooltip": false,
        "format": "ÔÉâ‚Åü",
        "on-click": "swaync-client -t -sw",
        "escape": true
