// Static tasks configuration.
//
// Example:
[
  {
    "label": "NIXOS SWITCH",
    "command": "nh os switch ."
  },
  {
    "label": "NIXOS SWITCH ON NEXT BOOT",
    "command": "nh os boot ."
  },
  {
    "label": "NIXOS TEST",
    "command": "nh os test ."
  },
  {
    "label": "NIXOS VM",
    "command": "rm result -rf; nixos-rebuild build-vm --flake ~/.config/nixos; if [[ -d ./result ]] ; then ./result/bin/run-${HOSTNAME}-vm ; fi;",
    "cwd": "/tmp/"
    // "hide": "on_success"
  },
  {
    "label": "NIXOS VM CLEAR",
    "command": "rm result ${HOSTNAME}.qcow2 -rf; nixos-rebuild build-vm --flake ~/.config/nixos; if [[ -d ./result ]] ; then ./result/bin/run-${HOSTNAME}-vm ; fi;",
    "cwd": "/tmp/"
    // "hide": "on_success"
  }
]
